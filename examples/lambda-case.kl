#lang "prelude.kl"

(import (shift "prelude.kl" 1))
(import (shift "quasiquote.kl" 1))

(define-macros
  ([lambda-case
    (lambda (stx)
      (syntax-case stx
        [(cons _ cases)
         (pure
           (list-syntax
             ('lambda
              '(x)
              (cons-list-syntax 'case
                (cons-list-syntax 'x
                  cases
                  stx)
                stx))
             stx))]))]))

(export lambda-case)
