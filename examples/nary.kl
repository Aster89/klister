#lang kernel

[import [shift (only kernel lambda pure quote syntax-case vec-syntax) 1]]



[define-macros
  ([my-lam
    [lambda [stx]
     (syntax-case stx
       [[vec [_ args body]]
        [pure [vec-syntax [[quote lambda] args body] stx]]])]])]



[define-macros
  ([lambda
    [lambda [stx]
     (syntax-case stx
      [[vec [_ args body]]
       [pure [vec-syntax [[quote my-lam] args body] stx]]])]])]


[export lambda]

